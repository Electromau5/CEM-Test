<h1 style="text-align:center">Edit Post</h1>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for @post do |f| %>
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>
		
			  	<%= f.label :description %>
			  	<%= f.text_area :description, class: 'form-control' %>
			
			  	<%= f.label :image %>
			  	<%= f.file_field :image, class: 'form-control' %><br />
		
				<%= f.submit %>
			<% end %>
		</div>
	</div>
