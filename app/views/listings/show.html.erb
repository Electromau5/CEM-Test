<div class = "container-fluid">
	<div class = "jumbotron">
		<div class = "row">
			<div class = "listing_set_1">
				<div class = "col-md-12">
					<div class = "col-md-3">
						<%= @listing.name %>
					</div>
						<div class = "col-md-2"> 	
							<span class = "label label-info">
								<%= number_to_currency(@listing.price) %>
							</span>
						</div>
							<div class = "col-md-3">
								<%= @listing.condition %>
							</div>
				</div>
			</div>
				<div class = "col-md-12">
					<div class = "col-md-4">
						<%= image_tag @listing.image.url(:medium) %>
					</div>
						<div class = "col-md-4">
							<%= @listing.description %>
						</div>
				</div>
					<div class = "listing_set_3">
						<div class = "col-md-12">
					 		<div class = "col-md-4">
								<%= @listing.location %>
							</div>
								<% if (logged_in? && current_seller == @listing.seller) || (logged_in? && current_seller.admin?) %>
									<div class = "col-md-4">
										<%= link_to 'Add Listing', new_listing_path  %>
										<%= link_to 'Delete Listing', listing_path(@listing), method: :delete, data: { confirm: "Are you sure you want to delete this listing"} %>
										<%= link_to 'Edit Listing', edit_listing_path(@listing) %>
									</div>
								<% end %>
								<%= link_to 'More from this seller', @listing.seller if @listing.seller %>
						</div>
					</div>
		</div>
	</div>
</div>