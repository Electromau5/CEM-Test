<div class = "container-fluid">
	<div class="btn-group btn-group-justified" role="group">
    	<% @category.each do |category| %>
			<div class="btn-group" role="group">
    			<button type="button">
					<%= link_to "#{category.name}", category_path(category), class: "btn btn-default" %>
				</button>
			</div>
         <% end %>
	</div>
</div>
   